<Server>
    {% for base_datos in base_datos_info %}
    <Context>
      <Resource name="jdbc/{{ base_datos.nombre_conexion }}" 
                auth="Container" 
                type="javax.sql.DataSource"
                maxActive="{{ base_datos.max_active }}" 
                maxIdle="{{ base_datos.max_wait }}" 
                maxWait="{{ base_datos.max_wait }}"
                username="{{ base_datos.username }}"
                password="{{ base_datos.password }}"
                driverClassName="com.mysql.jdbc.Driver"
                url="{{ base_datos.url }}"/>
    </Context>
    {% endfor %}
<Server>